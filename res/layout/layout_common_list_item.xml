<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="3dp"
    android:background="@drawable/border_bottom" >
    
	<ImageView
	    android:id="@+id/img_common_item_icon"
	    android:layout_width="35dp"
	    android:layout_height="35dp"
	    android:layout_gravity="left"
	    android:layout_margin="2dp" />

	<TextView
	    android:id="@+id/txt_common_item_label"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:layout_toRightOf="@+id/img_common_item_icon"
	    android:gravity="center_vertical"
	    android:paddingLeft="5dp"
	    android:textColor="#ffffff"
	    android:textSize="19sp"
	    android:text="Default" />

	<ImageView
	    android:id="@+id/img_common_item_lock"
	    android:layout_width="23dp"
	    android:layout_height="23dp"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="10dp"
	    android:layout_centerVertical="true"
	    android:gravity="center_vertical"
	    android:src="@drawable/layout_carlist_list_img_lock" />

</RelativeLayout>